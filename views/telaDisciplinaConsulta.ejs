<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Consulta disciplina</title>

    <nav id="navbar-example2" class="navbar navbar-light bg-light px-3">
        <a class="navbar-brand" href="http://localhost:3000">Principal</a>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="http://localhost:3000/telaAcessoProfessor">Voltar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="http://localhost:3000/login">Sair</a>
            </li>
        </ul>
    </nav>
</head>

<body>
    <div class="container">
        <div class="col">
            <div class="row">
                <h2>Consultar Disciplina</h2>

                <form class="container" method="post" action="/telaUsuarioConsulta">

                    <h2>Listagem de Disciplina</h2>
                    <p><a href="/telaDisciplinaCadastro">Novo Disciplina</a></p>
                    <table class="table">
                        <tr>
                            <td>Ordem</td>
                            <td>Nome Disciplina</td>
                        </tr>
                        <tr>
                                <% disciplinas.forEach(function(disciplina){%>
                                    <td>
                                        <%= disciplinas.cd_disciplina %>
                                    </td>
                                    <td>
                                        <%= disciplinas.de_disciplina %>
                                    </td>
                                <%} )%>
                                    <td>
                                        <p><a href="/telaDisciplinaAtualizar">Alterar</a></p>
                                        <!--// chamar função deletar-->
                                        <p><a href="#">Excluir</a></p>
                                    </td>
                        </tr>

                    </table>
                </form>

            </div>
        </div>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

